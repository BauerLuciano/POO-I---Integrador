<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventos.controlador.InscripcionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="lblEvento" text="InscripciÃ³n al Taller">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label fx:id="lblCupo" text="Cupo: Calculando..." textFill="#666666"/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Seleccionar Persona:" />
        <ComboBox fx:id="comboPersonas" prefWidth="250.0" promptText="Buscar persona..."/>
        <Button text="Inscribir" onAction="#inscribir" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Label text="Listado de Inscriptos Actuales" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

    <TableView fx:id="tablaInscriptos" VBox.vgrow="ALWAYS" prefHeight="200.0">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200.0" />
            <TableColumn fx:id="colDni" text="DNI" prefWidth="100.0" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180.0" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>